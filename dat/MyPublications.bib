	urldate = {2021-01-11},
	journal = {Proceedings of the National Academy of Sciences},
	author = {Taubenheim, Jan and Willoweit-Ohl, Doris and Knop, Mirjam and Franzenburg, Sören and He, Jinru and Bosch, Thomas C. G. and Fraune, Sebastian},
	month = sep,
	year = {2020},
	pages = {21459--21468},
	file = {Full Text:/home/jan/Zotero/storage/AXHHPVW2/Taubenheim et al. - 2020 - Bacteria- and temperature-regulated peptides modul.pdf:application/pdf},
